{
  "prompts": {
    "name": {
      "type": "string",
      "required": true,
      "label": "Project name"
    },
    "description": {
      "type": "string",
      "required": true,
      "label": "Project description",
      "default": "A Vue.js project"
    },
    "author": {
      "type": "string",
      "label": "Author"
    },
    "license": {
      "type": "string",
      "label": "License",
      "default": "MIT"
    },
    "sass": {
       "type": "confirm",
       "message": "使用sass吗?",
       "default": false
    },
    "less":{
        "type": "confirm",
        "message": "使用less吗?",
        "default": false
    },
    "axios":{
        "type": "confirm",
        "message": "使用axios不？",
        "default": false
    },
    "lib-flexible":{
        "type": "confirm",
        "message": "是否使用移动端淘宝布局方案",
        "default": false
    }
  },
  "completeMessage": "{{#inPlace}}To get started:\n\n  npm install\n  npm run dev{{else}}To get started:\n\n  cd {{destDirName}}\n  npm install\n  npm run dev{{/inPlace}}"
}
